{
    "$schema": "https://json-schema.org/draft-07/schema",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "type",
        "description",
        "components"
    ],
    "properties": {
        "type": {
            "const": "block"
        },
        "description": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "identifier",
                "type_id"
            ],
            "properties": {
                "identifier": {
                    "type": "string"
                },
                "type_id": {
                    "type": "integer",
                    "minimum": 0
                }
            }
        },
        "components": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "collision_box": {
                    "type": "object",
                    "additionalProperties": false
                },
                "destructible_by_mining": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": [
                        "seconds_to_destroy"
                    ],
                    "properties": {
                        "seconds_to_destroy": {
                            "type": "number",
                            "minimum": 0
                        }
                    }
                },
                "friction": {
                    "type": "number",
                    "minimum": 0,
                    "maxinum": 1
                }
            }
        }
    }
}
